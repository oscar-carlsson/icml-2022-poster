% makes header
\newcommand{\makefinding}[1]{
    \vspace*{-1cm} % get rid of random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[t][0.3\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}{\textwidth}
          \textcolor{white}
            {\fontsize{40}{50} \selectfont
            %\begin{center}
                 \nohyphens{#1}
            %\end{center}
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}

% makes footer
\newcommand{\makefooter}[2]{
    \newcommand{\heightfactor}{0.1}

    \newdimen{\footerImageHeight}
    \footerImageHeight=\heightfactor\paperheight
    \footerImageHeight=0.8\footerImageHeight

    \vspace*{\fill}
    \noindent\makebox[\linewidth][c]{%
      \colorbox{\postertype}{%
        \parbox[c][\heightfactor\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c][\heightfactor\paperheight][c]{0.15\textwidth}
                \includegraphics[height=\footerImageHeight, left]{#2}
          \end{minipage}
          \begin{minipage}[c][\heightfactor\paperheight][c]{0.3\textwidth}
              \textcolor{white}
                {\large{
                   $\leftarrow$ Download [Gerken, Jan E. et al. 2021]}
                }
          \end{minipage}
          \hfill
          \begin{minipage}[c][\heightfactor\paperheight][c]{0.4\textwidth}
            \includegraphics[height=\footerImageHeight, left]{#1}
          \end{minipage}
        }%
      }%
    }\par\medskip
}

% alternative footer
\newcommand{\makealtfooter}[2]{
